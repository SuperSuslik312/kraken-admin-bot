{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "es2020"],
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}